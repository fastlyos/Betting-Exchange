@using BetEx247.Data.Model;

@model List<PSV_MYBET>
@{
    ViewBag.Title = "BettingPL";
    Layout = null;
}
<div class="clearfix">
    <h1 class="sports_header1">
        MY ACCOUNT</h1>
    <div class="create-account-box">
        <div class="account-box-title">
            Betting P/L
        </div>
        <div class="account-box-filter">
            <table id="filter-tbl" style="width: 90% !important;">
                <tr>
                    <td style="width: 15%; text-align: right;">
                        Date Setled
                    </td>
                    <td style="width: 20%;">
                        <table>
                            <tr>
                                <td align="right" style="width: 1%; padding: 0px 0px; text-align: left;">
                                    <input type="radio" name="DateFilter" value="1" checked style="border: 0px !important;" />
                                </td>
                                <td align="left" width="99%" style="padding: 0px 0px;">
                                    <select name="ByPeriod" id="ByPeriod" style="border: 1px solid black; font-size: 0.9em;">
                                        <option value="24h">Last 24 hours</option>
                                        <option value="48h">Last 48 hours</option>
                                        <option value="7d">Last 7 days</option>
                                        <option value="30d">Last 30 days</option>
                                        <option value="3m">Last 3 months</option>
                                        <option value="6m">Last 6 months</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td width="45%" align="left">
                        <table>
                            <tr>
                                <td align="right" width="1%" style="padding: 0px 0px; margin: 0 auto;">
                                    <input type="radio" name="DateFilter" value="2" style="border: 0px !important;" />
                                </td>
                                <td align="left" width="99%" style="padding: 0px 0px; margin: 0 auto;">
                                    <input id="date1" type="textbox" class="text-input-date" />&nbsp;&nbsp;<input id="date2"
                                        type="textbox" class="text-input-date" />
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td width="20%" align="left" style="text-align: left;">
                        <span class="lookup-submit" style="float: left;"><a href="/" id="lookuplink" onclick="document.forms[0].submit(); return false;">
                            Show records</a>
                            <button name="lookupbutton" id="lookupbutton" value="Lookup" type="submit" style="display: none">
                                Show records</button></span>
                    </td>
                </tr>
            </table>
        </div>
        <div class="account-box-result-heading">
            <div class="dvFilterTitle">
                Show &nbsp;
                <select name="rowspage">
                    <option value="20" selected>20</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                records / page
            </div>
            <div class="PgCounter">
                Page 1/12 <span class="paging">1</span> <a title="201 - 400" href="javascript:{}"
                    onclick="load_pg(24780,200,2)">2</a> <a title="401 - 600" href="javascript:{}" onclick="load_pg(24780,200,3)">
                        3</a> <a title="601 - 800" href="javascript:{}" onclick="load_pg(24780,200,4)">4</a>
                <a title="601 - 800" href="javascript:{}" onclick="load_pg(24780,200,11)">11</a>
                <a title="201 - 400" href="javascript:{}" onclick="load_pg(24780,200,2)">»</a> <a
                    title="24600 - 24780" href="javascript:{}" onclick="load_pg(24780,200,124)">».</a></div>
        </div>
        <!--DIV BETTING P/L-->
        <div id="dv-commission" style="clear: both; position: relative;">
            <table class="gridtable">
                <tr>
                    <th>
                        Description
                    </th>
                    <th>
                        No. of Bets
                    </th>
                    <th>
                        Matched Turnover
                    </th>
                    <th>
                        Settled Gross P/L
                    </th>
                    <th>
                        Commission paid
                    </th>
                    <th>
                        Settled Net P/L
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BetId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MatchTurnOver)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GrossProfit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Commission)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NetProfit)
                        </td>                        
                    </tr>
                }
                <tr>
                    <td>
                        Settled Bets within 24 hours
                    </td>
                    <td>
                        3
                    </td>
                    <td>
                        1/3
                    </td>
                    <td>
                        57.25
                    </td>
                    <td>
                        2.65
                    </td>
                    <td>
                        54.39
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
