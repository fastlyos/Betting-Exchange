@using BetEx247.Data.Model;
@model List<PSV_MYBET>
@{
    ViewBag.Title = "CancelledBets";
    Layout = null;
}
<script src="@Url.Content("~/Content/Scripts/GUI/AccountHistory.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Scripts/GUI/Common.js")" type="text/javascript"></script>
<div class="clearfix">
    <h1 class="sports_header1">
        MY ACCOUNT</h1>
    <div class="create-account-box">
        <div class="account-box-title">
            Cancelled Bets
        </div>
        <div class="account-box-filter AccountRegForm">           
            @Html.Partial("AccountReportSearch")
        </div>
        <div class="account-box-result-heading">
            <div class="dvFilterTitle">
                Show &nbsp;
                <select name="rowspage">
                    <option value="20" selected>20</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                records / page
            </div>
            <div class="PgCounter">
                Page 1/12 <span class="paging">1</span> <a title="201 - 400" href="javascript:{}"
                    onclick="load_pg(24780,200,2)">2</a> <a title="401 - 600" href="javascript:{}" onclick="load_pg(24780,200,3)">
                        3</a> <a title="601 - 800" href="javascript:{}" onclick="load_pg(24780,200,4)">4</a>
                <a title="601 - 800" href="javascript:{}" onclick="load_pg(24780,200,11)">11</a>
                <a title="201 - 400" href="javascript:{}" onclick="load_pg(24780,200,2)">»</a> <a
                    title="24600 - 24780" href="javascript:{}" onclick="load_pg(24780,200,124)">».</a>
            </div>
        </div>
        <!--DIV COMMISSION-->
        <div id="dv-commission" style="clear: both; position: relative;">
            <table class="gridtable">
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        ID
                    </th>
                    <th>
                        Match / Event
                    </th>
                    <th>
                        Market
                    </th>
                    <th>
                        B/L
                    </th>
                    <th>
                        Stake
                    </th>
                    <th>
                        Odds
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubmitedTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BetId)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.MarketID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SportName + " - " + item.LeagueName)
                        </td>                        
                        <td>
                            @{
                            if (item.BL != null && item.BL.Value)
                            {
                                @Html.Raw("Bet")
                            }
                            else
                            {
                                @Html.Raw("Lay")
                            }
                            }
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.Stake)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.BetStatusID)
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        2012-10-30
                    </td>
                    <td>
                        e72da32
                    </td>
                    <td>
                        <div style="width: 100%; clear: both; margin: 0 auto; text-align: left; padding-left: 0px;
                            color: #000;">
                            Oct 19, 2012 17:30</div>
                        <div style="width: 100%; clear: both; margin: 0 auto; text-align: left; padding-left: 0px;
                            color: #000; font-weight: bold;">
                            Manchester Utd v Chelsea</div>
                    </td>
                    <td>
                        Total goals Over 2/2.5 (First Half)
                    </td>
                    <td>
                        B
                    </td>
                    <td>
                        100.00
                    </td>
                    <td>
                        1.87
                    </td>
                    <td>
                        <span class="cancelled">Cancelled</span>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
