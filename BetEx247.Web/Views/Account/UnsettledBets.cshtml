@model IEnumerable<BetEx247.Data.Model.PSV_MYBET>
@{
    ViewBag.Title = "UnsettledBets";
    Layout = null;
}
<div class="clearfix">
    <h1 class="sports_header1">
        MY ACCOUNT</h1>
    <div class="create-account-box">
        <div class="account-box-title">
            Unmatched Bets
        </div>
        <!--DIV EXPOSURE-->
        <div id="dv-exposure" style="clear: both; position: relative;">
            <table class="gridtable">
                <tr>
                    <th width="10%">
                        Date
                    </th>
                    <th width="5%">
                        ID
                    </th>
                    <th width="20%">
                        Match / Event
                    </th>
                    <th width="20%">
