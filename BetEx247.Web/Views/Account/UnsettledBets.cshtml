                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            <div style="width: 100%; clear: both; margin: 0 auto; text-align: left; padding-left: 0px;
                                color: #000;">
                                @Html.DisplayFor(modelItem => item.StartDateTime)</div>
                            <div style="width: 100%; clear: both; margin: 0 auto; text-align: left; padding-left: 0px;
                                color: #000; font-weight: bold;">
                                @Html.DisplayFor(modelItem => item.HomeTeam) v @Html.DisplayFor(modelItem => item.AwayTeam)</div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MarketID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stake)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BetStatus)
                        </td>
                    </tr>
                }
