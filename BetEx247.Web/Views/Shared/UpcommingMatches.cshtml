@using System.Collections;
@using BetEx247.Data.Model;
@using System.Data;
@{
    List<PSV_MATCHES> list = ViewBag.ListSoccerComming;
    DateTime DateNow = DateTime.Now;
    SoccerLeague league = ViewBag.LeagueDetail;
    SoccerCountry country = ViewBag.SoccerCountries;
}
<div class="events">
    <div style="position: absolute; margin-top: 8px; padding-left: 15px">
        Upcomming Matches
    </div>
    <div style="position: relative; float: right; margin-top: 8px; padding-right: 15px;
        color: #fff; text-transform: none;">
         @{
            if (league != null)
            {
                @Html.Raw(league.LeagueName_WebDisplay)
            }
            else if(country!=null){
                @Html.Raw(country.Country)
            }
            else
            {
                @Html.Raw("next 24 hours")
            }
        }</div>
</div>
<div class="alt_content bdr_btm">
    <div class="event_wrap">
        <div class="soccer-heading">
            <div class="headerExtra couponTitle">
                Soccer<br />
                <span class="couponDate"></span>
            </div>
        </div>
        <p><br />
        @{   
            for (int i = 0; i < 7; i++)
            {
                List<PSV_MATCHES> temp = list.Where(w => w.StartDate.Date == DateNow.Date).ToList();
                if (temp.Count > 0)
                {
                    var tempLeague = temp.Select(w=>new{w.LeagueID,w.LeagueName}).Distinct();//.Where(w => w.StartDate.Date == DateNow.Date).ToList();
                    foreach(var itemleague in tempLeague){
                        @Html.Raw("<span style=\"font-size: 1.1em; font-weight: bold; color: yellow; display: inline;float: left;\">" + itemleague.LeagueName + "</span><br />")
                        @Html.Raw("<span class=\"couponDate\" style=\"font-size: 1.1em !important;\">" + DateNow.ToLongDateString() + "</span><br />")
                    
                        foreach (PSV_MATCHES item in temp)
                        {        
                            if(item.LeagueID==itemleague.LeagueID){         
                                <div class="betting_row clearfix">
                                    <div style="float: left; padding: 5px 5px 5px 0px;">
                                        @item.StartTime.ToString("HH:mm")</div>
                                    <a href="#" class="betLink cell fifty" id="@item.ID" onclick="addToBettingSlip('@item.ID');">
                                        @item.HomeTeam &nbsp;&nbsp;&nbsp;vs&nbsp;&nbsp;&nbsp; @item.AwayTeam</a> <a href="#"
                                                        class="betLink cell third last_cell" id="@item.ID" onclick="addToBettingSlip('@item.ID');">
                                            View all markets >> </a>
                                </div>
                               @Html.Raw("<p>") 
                            }
                        }
                    }

                }
                DateNow = DateNow.AddDays(1);
            }
        }
    </div>
</div>
